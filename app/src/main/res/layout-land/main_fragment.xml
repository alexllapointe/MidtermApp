<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Welcome to the game!"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintHeight_percent="0.22"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/play_game_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/play_game_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Play Game"
        android:textSize="20sp"
        android:background="@drawable/squared_gray_button"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintHeight_percent="0.44"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view_scores_button"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <Button
        android:id="@+id/view_scores_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="View High Scores"
        android:textSize="20sp"
        android:background="@drawable/squared_gray_button"
        app:layout_constraintHeight_percent="0.44"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/play_game_button"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
