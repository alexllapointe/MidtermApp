<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- RandomNumberFragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/randomNumberFragment"
        android:name="edu.iu.alex.midtermapp.RandomNumberFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/attemptsFragment"
        app:layout_constraintVertical_weight="1" />

    <!-- AttemptsFragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/attemptsFragment"
        android:name="edu.iu.alex.midtermapp.AttemptsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/randomNumberFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
